---
import BaseLayout from "@/layouts/BaseLayout.astro"

const cards = [
  {
    title: 'Maximiza el día a día con Microsoft 365',
    imgUrl: '/img/microsoft/Content-Card-Microsoft-365-Lifestyle-Sandstone-Icon-Toss.avif',
    text: 'Recibe protección en línea, almacenamiento seguro en la nube y aplicaciones innovadoras diseñadas para adaptarse a tus necesidades, todo en un mismo plan.', 
    textButton: 'Para 1 persona'
  },
  {
    title: 'Diseñado para la vida de hoy y de mañana',
    imgUrl: '/img/microsoft/gldn-CP-Windows11-GlobalLaunch.jpg',
    text: 'La nueva generación de juegos. Tus objetivos. Familia y amigos.Windows 11 está hecho para acercarte a todo lo que te encanta.', 
    textButton: 'Ve si tu PC está listo'
  },
  {
    title: 'Microsoft Edge',
    imgUrl: '/img/microsoft/gldn-MSFT-CP-Edge.webp',
    text: 'Un rendimiento de categoría mundial con más privacidad, más productividad y más valor mientras navegas.', 
    textButton: 'Descargar ahora'
  },
  {
    title: 'Microsoft OneDrive',
    imgUrl: '/img/microsoft/gldn-Soft-CP-OneDriveCampaignRefresh-2.webp',
    text: 'Guarda tus archivos y fotos en OneDrive y accede a ellos desde cualquier dispositivo y en cualquier lugar.', 
    textButton: 'Más información'
  }
]
---

<!-- BEM -->
<!-- Block__element--modifier -->
<!-- Card__button--liked -->

<BaseLayout title="Microsoft Web" favicon="/ico/microsoft.ico">
  <header class="home-header">
    <nav class="navbar-horizontal justify-between max-w-1600 mx-auto">
      <nav class="navbar-horizontal">
        <div class="link-container">
          <a class="mx-auto" href="/">
            <img 
              class="home-header__logo"
              src="/img/microsoft/RE1Mu3b.png" 
              alt="Microsoft"
            />
          </a>
        </div>
        <ul class="horizontal-links">
          <li class="link-container"><a href="/" class="horizontal-links__link">Home</a></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Microsoft 365</a></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Office<a/></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Copilot<a/></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Windows<a/></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Xbox<a/></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Soporte<a/></li>
        </ul>
      </nav>
      <nav class="navbar-horizontal">
        <ul class="horizontal-links">
          <li class="link-container"><a href="#" class="horizontal-links__link horizontal-links__link--current">Todo microsoft</a></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Buscar</a></li>
          <li class="link-container"><a href="#" class="horizontal-links__link">Iniciar sesión</a></li>
        </ul>
      </nav>
    </nav>
  </header>
  <main>
    <section class="banner">
      <figure class="banner__img-container">
        <img
          class="banner__img-md radio-1920-600"
          src="/img/microsoft/Highlight-Surface-Laptop-AI-7Ed-Sapphire-MC001-3000x1682_VP5-1920x600.avif"
          alt="banner image"
        />
        <img 
          class="banner__img radio-859-540"
          src="/img/microsoft/Highlight-Surface-Laptop-AI-7Ed-Sapphire-MC001-3000x1682_VP2-859x540.avif" 
          alt="banner image"
        />
      </figure>
      <div class="banner__content my-auto">
        <article class="banner__content-container">
          <h2 class="banner__content-title">Conoce Surface Laptop</h2>
          <p class="banner__content-text">
            Desbloquea características de IA de nueva generación, como Recuerdos y Cocreador, con este portátil excepcionalmente potente.
          </p>
          <button class="button">Reservar ahora</button>
        </article>
      </div>
    </section>
    <section class="cards-container max-w-1600 mx-auto">
      {
        cards.map(card => (
          <article class="card">
            <img
              class="card__img"
              src={card.imgUrl}
              alt="image"
            />
            <div class="card__content">
              <div>
                <h2 class="card__content-title">{card.title}</h2>
                <p class="card__content-text">{card.text}</p>
              </div>
              <button class="button">{card.textButton}</button>
            </div>
          </article>
        ))
      }
    </section>
    <section class="banner max-w-1600 mx-auto mb-2">
      <figure class="banner__img-container">
        <img
          class="banner__img-md radio-1596-600"
          src="/img/microsoft/Highlight-Copilot-Hero-MC002_VP5-1596x600.avif"
          alt="banner"
        />
        <img 
          class="banner__img radio-859-540"
          src="/img/microsoft/Highlight-Copilot-Hero-MC002_VP2-859x540.avif"
          alt="banner"
        />
      </figure>
      <div class="banner__content banner__content--right my-auto">
        <article class="banner__content-container">
          <h2 class="banner__content-title">Comienza una nueva era de IA</h2>
          <p class="banner__content-text">
            Los PC Windows más rápidos  e inteligentes de la historia
          </p>
          <button class="button">Más información</button>
        </article>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .justify-between {
    justify-content: space-between;
  }

  .relative {
    position: relative;
  }

  .max-w-1600 {
    max-width: 1600px;
  }

  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }

  .my-auto {
    margin-top: auto;
    margin-bottom: auto;
  }

  .mb-2 {
    margin-bottom: 2rem;
  }

  .home-header {
    align-content: center;
    padding: 8px 24px;
  }

  .button {
    border: none;
    background-color: hsl(204, 100%, 35%);
    border-radius: 2px;
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
    padding: 12px 16px;
    width: fit-content;
    cursor: pointer;
  }

  img.home-header__logo {
    max-width: none;
    width: 108px;
  }

  .navbar-horizontal {
    display: flex;
    flex-flow: row wrap;
    background-color: white;
    align-items: center;
    gap: 24px;
  }

  ul.horizontal-links {
    list-style: none;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
  }

  .link-container {
    display: contents;
    cursor: pointer;
  }

  a.horizontal-links__link {
    padding: 8px 12px;
    color: hsl(0, 0%, 20%);
    text-decoration: none;
    transition: 0.3s;
    font-size: small;
    
    &::after {
      content: '';
      z-index: 1;
      width: 100%;
      height: 2px;
      display: block;
      background-color: transparent;
      transition: 0.3s;
    }
  
    &:hover {
      background-color: hsla(200, 100%, 50%, 10%);
      color: hsl(200, 100%, 40%);    
      
      &::after {
        background-color: hsl(200, 100%, 40%);
      }
    }
  }

  a.horizontal-links__link--current {
    background-color: hsla(0, 0%, 0%, 5%);
    color: hsl(0, 0%, 10%);
  }

  .banner {
    position: relative;
    display: block;
  }

  .banner__img-container {
    display: contents;
  }

  .radio-1920-600 {
    aspect-ratio: 1920/600;
  }

  .radio-1596-600 {
    aspect-ratio: 1596/600;
  }

  .radio-859-540 {
    aspect-ratio: 859/540;
  }

  img.banner__img-md {
    width: 100%;
    display: none;
  }

  img.banner__img {
    width: 100%;
    display: block;
  }

  div.banner__content {
    padding: 12px 24px;
    display: flex;
    justify-content: flex-start;
  }

  h2.banner__content-title {
    font-weight: 600;
    font-size: 2.3rem;
    margin-bottom: 1rem;
  }

  p.banner__content-text {
    font-size: 1rem;
    margin-bottom: 2rem;
    text-wrap: pretty;
  }

  .cards-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    grid-auto-rows: 560px;
    gap: 24px;
    padding: 64px 24px;
    justify-items: center
  }

  .card {
    box-shadow: 2px 2px 10px hsla(0, 0%, 0%, 12%);
    height: 100%;
    display: flex;
    flex-flow: column nowrap;
  }

  .card__img {
    width: 100%;
  }

  .card__content {
    padding: 24px 20px;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    flex-grow: 1;
  }

  h2.card__content-title {
    font-size: 1.7rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-wrap: balance;
  }
  
  p.card__content-text {
    font-size: 1rem;
    margin-bottom: 1rem;
    text-wrap: pretty;
  }

  @media (width > 859px) {
    .banner {
      display: flex;
      flex-flow: row nowrap;
      overflow-x: hidden;
    }

    img.banner__img-md {
      flex-grow: 1;
      display: block;
    }

    img.banner__img {
      display: none;
    }

    div.banner__content--right {
      justify-content: flex-end;
    }

    div.banner__content {
      width: 100%;
      margin-left: -100%;
      padding: 0px 64px;
    }

    .banner__content-container {
      max-width: 40%;
    }
  }

  @media (width > 1280px) {
    div.banner__content {
      width: 100%;
      margin-left: -100%;
      padding: 0px 128px;
    }
  }
</style>
