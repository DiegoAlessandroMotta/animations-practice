---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/inter";

interface Props {
  title: string;
  favicon?: string;
}

const { title, favicon = "/favicon.svg" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content="This web has many interesting things development using basic web concepts and eventualy it is going to scale using more advances concepts" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta property="og:url" content="https://animations-practice.pages.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Web Dev Practice - Preview Social Media Share and Generate Metatags" />
    <meta property="og:description" content="Web Dev Practice is an interesting page about web programming" />
    <!-- <meta property="og:image" content="https://animations-practice.pages.dev/image.png"> -->

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="animations-practice.pages.xyz" />
    <meta property="twitter:url" content="https://animations-practice.pages.dev/" />
    <meta name="twitter:title" content="Web Dev Practice - Preview Social Media Share and Generate Metatags" />
    <meta name="twitter:description" content="Web Dev Practice is an interesting page about web programming" />
    <!-- <meta name="twitter:image" content="https://animations-practice.pages.dev/image.png"> -->

    <link rel="icon" type="image/x-icon" href={favicon} />
    <ViewTransitions />
  </head>
  <body
    class="bg-white dark:bg-zinc-950 text-zinc-700 dark:text-zinc-300 overflow-y-hidden overflow-x-hidden"
  >
    <div class="w-dvw h-dvh overflow-y-auto overflow-x-hidden flex flex-col">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html:has(input#dark-theme-switch:checked) {
    color-scheme: dark;
  }

  * {
    scrollbar-width: thin;
    font-family:
      "Inter Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>