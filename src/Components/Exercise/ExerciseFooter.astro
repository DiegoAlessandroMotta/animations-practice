---
interface Props {
  messageId?: string;
}

const { messageId = null } = Astro.props;
---

<footer class="min-h-32 mb-4">
  <p class="font-medium text-lg text-center text-zinc-600 dark:text-zinc-300">
    Result:
  </p>
  {
    messageId && (
      <div
        class="text-center text-zinc-500 dark:text-zinc-400 mt-2 px-3"
        data-id={messageId}
      ></div>
    )
  }
  <slot />
</footer>
